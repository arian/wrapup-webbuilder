
// general classes

.hidden
	display none

// layout styles

body
	font 12px Helvetica, Arial, sans-serif

.CodeMirror
	border 1px solid black

.aside

	.load
		input
			display block

	.snippets
		list-style none
		margin 0
		padding 0

		li
			overflow hidden
			padding 5px

			select
				float left
				width 100px

			a
				border-radius 5px
				color black
				display block
				margin-left 110px
				padding 5px

				&:hover
					background #e5e5e5
					box-shadow 1px 1px 2px rgba(0,0,0,0.3)
				&:active
					box-shadow inset 1px 1px 5px rgba(0,0,0,0.3)
					padding 6px 4px 4px 6px

form label
	display block

@media screen and (min-width: 700px)

	.aside,
	.editor
		float left

	.aside
		margin-right 2%
		width 20%

	.editor
		width: 78%

	.save
		clear both
